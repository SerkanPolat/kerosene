#!/usr/bin/env python

import importlib
import sys
import os
from distutils import spawn
from fuel import converters

if __name__ == "__main__":
    python_file = sys.argv[1]
    basename_ext = os.path.basename(python_file)
    basename = os.path.splitext(basename_ext)[0]
    execfile(python_file)
    converters.all_converters += ((basename, convert_subparser),)
    sys.argv[1] = basename
    print "Loaded module {}".format(basename)

fuel_convert = spawn.find_executable("fuel-convert")
if(fuel_convert):
    execfile(fuel_convert)

exit(0)
